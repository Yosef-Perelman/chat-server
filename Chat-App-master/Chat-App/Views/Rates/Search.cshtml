@model IEnumerable<Chat_App.Models.Rate>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4 fw-normal text-center"><u>RATES PAGE</u></h1>

<div class="d-flex justify-content-between mb-3">
    <div class="p-2 bg-dark text-white"><h5 >Average ratings: @ViewData["Average"]</h5></div>
    <div class="p-2"></div>
    
    <div class="p-2 "><form asp-action="Search">
    <input name="query" />
    <input type="submit" value="Search" />
</form></div>
  </div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                Created/Edited in:
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<button type="button" class="btn btn-outline-dark"><a class="link-dark text-white" asp-action="Create">Create New</a></button>
